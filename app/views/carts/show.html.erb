<h1>Carts#show</h1>

<table>
  <thead>
    <th>Name</th>
    <th>Price</th>
  </thead>
  <tbody>
    <% @cart.products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
      </tr>
    <% end %>
    <tr>
      <td>Total:</td>
      <td><%= @cart.total_amount %></td>
    </tr>
  </tbody>
</table>

<% unless @cart.cart_payment && @cart.cart_payment.payed? %>
  <%= form_for [@cart, CartPayment.new]  do |f| %>
    <%= f.submit "Pagar", class: "btn btn-primary" %>
  <% end %>
<% else %>
  <p>Pagado :)</p>
<% end %>
